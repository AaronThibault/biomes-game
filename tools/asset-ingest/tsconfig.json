{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "../../src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*", "../../src/shared/assets/**/*"],
  "exclude": ["node_modules", "dist"]
}
